{
    "compilerOptions": {
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "module": "CommonJS"
    },
    "include": [
        "__acceptance__/**/*.js",
        "__tests__/**/*.js",
        "doubles/**/*.js",
        "src/entities/**/*.js",
        "src/repositories/**/*.js",
        "src/usecases/**/*.js",
        "src/utils/**/*.js",
        "src/validation/**/*.js",
        "server.js"
    ],
    "exclude": ["node_modules"]
}
